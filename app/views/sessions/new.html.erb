<h1 class="sign_in">Sign in</h1>
<%= form_tag signin_path do %>

<div class = "form-group form-control-sm">
  <%= label_tag :email,'Email',class: 'custom-font' %>&nbsp;&emsp;&nbsp;&nbsp;
  <%= text_field_tag :email, nil, placeholder: "email" %><br>
</div>

<div class = "form-group form-control-sm">
  <%= label_tag :password,'Password',class: 'custom-font' %>
  <%= password_field_tag :password, nil, placeholder: "password" %><br>
</div>

<div class="actions">
  <%= submit_tag "Sign in", class:'btn btn-secondary' %>
  <%= link_to "Sign up?", signup_path , class:'btn btn-primary' %>
</div>

    <% unless current_user %>
      <div class="flash-alert">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%#= flash[:alert] %> <!--purath ittalum answer varum-->

<% end %>